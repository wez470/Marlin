#, kv file implementation

<Root>:
    cols: 1
    col_default_width: 200
    rows: 2
    label: label

    GridLayout:
        cols: 3
        rows: 1

        Button:
            size_hint: (None, None)
            height: 60
            width: 140
            text: 'Load'
            on_release: root.show_load()

        Label:
            text_size: self.size
            padding_x: 10
            halign: 'right'
            valign: 'middle'
            size_hint: (None, None)
            text: 'WPM:'
            font_size: 40
            height: 60
            width: 140

        TextInput:
            size_hint: (None, None)
            height: 60
            width: 100
            id: text_input
            text: ''

    GridLayout:
        cols: 1
        rows: 1
        Label:
            id: label
            text: 'My Label'
            font_size: 40


<FileLoader>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_max_y: 90
            size_hint_y: 0.1
            padding: (10, 20)
            valign: 'bottom'

            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
