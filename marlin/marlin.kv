<Root>:
    #text_input: text_input
    cols: 1
    col_default_width: 200
    rows: 2
    label: label

    GridLayout:
        cols: 1
        rows: 1
        Label:
            id: label
            #size_hint_y: .1, 0.2
            color: 0.5, 0, 0, 1
            text: 'My Label'
            font_size: 40

    GridLayout:
        cols: 1
        rows: 1

        size_hint_y: 0.1
        height: 30
        Button:
            text: 'Load'
            on_release: root.show_load()

        #TextInput:
        #    id: text_input
        #    text: ''

        #    RstDocument:
        #        text: text_input.text
        #        show_errors: True


<FileLoader>:
    BoxLayout:
        size: root.size
        pos: root.pos
        #orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

